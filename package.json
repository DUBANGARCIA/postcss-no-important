{
  "name": "postcss-no-important",
  "version": "11.0.0",
  "description": "PostCSS plugin for delete declarations !important",
  "keywords": [
    "postcss",
    "css",
    "postcss-plugin",
    "important"
  ],
  "homepage": "https://github.com/DUBANGARCIA/postcss-no-important",
  "bugs": {
    "url": "https://github.com/DUBANGARCIA/postcss-no-important/issues"
  },
  "repository": "DUBANGARCIA/postcss-no-important",
  "license": "MIT",
  "author": "Duban Garcia <duban162008@gmail.com>",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build:release": "rm -rf ./dist ./dist-releas && bun --bun tsup",
    "commit": "bun --bun git-czg",
    "postinstall": "bun --bun sort-package-json",
    "prepare": "bun --bun is-ci || (echo 'You are not in CI, installing hooks...' && lefthook install)",
    "release": "env $(cat .env | xargs) bun release-it --ci",
    "test": "bun vitest run",
    "test:coverage": "bun vitest run --coverage",
    "test:watch": "bun vitest",
    "type-check": "bun --bun tsc --noEmit"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-git",
      "czConfig": "./commitlint.config.js",
      "useEmoji": true
    }
  },
  "overrides": {
    "@conventional-changelog/git-client": "2.5.1",
    "conventional-changelog-conventionalcommits": "9.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.13",
    "@commitlint/cli": "20.3.1",
    "@commitlint/config-conventional": "20.3.1",
    "@release-it/bumper": "7.0.5",
    "@release-it/conventional-changelog": "10.0.4",
    "@taplo/cli": "0.7.0",
    "@tsconfig/bun": "1.0.10",
    "@tsconfig/node-lts": "24.0.0",
    "@tsconfig/node-ts": "23.6.2",
    "@tsconfig/recommended": "1.0.13",
    "@types/bun": "1.3.7",
    "@types/node": "25.0.10",
    "@vitest/coverage-v8": "4.0.18",
    "clean-publish": "6.0.1",
    "cz-git": "1.12.0",
    "czg": "1.12.0",
    "is-ci": "4.1.0",
    "release-it": "19.2.4",
    "sort-package-json": "3.6.1",
    "tsup": "8.5.1",
    "typescript": "5.9.3",
    "vitest": "4.0.18"
  },
  "peerDependencies": {
    "postcss": "^8.0.0"
  },
  "engines": {
    "bun": "1.3.8",
    "node": "Please use bun instead of Node to use dependencies",
    "npm": "Please use bun instead of NPM to install dependencies",
    "pnpm": "Please use bun instead of PNPM to install dependencies",
    "yarn": "Please use bun instead of Yarn to install dependencies"
  },
  "publishConfig": {
    "directory": "dist"
  },
  "clean-publish": {
    "withoutPublish": true,
    "tempDir": "dist",
    "files": [
      ".idea"
    ]
  }
}
