# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = tab
insert_final_newline = true
max_line_length = 100
tab_width = 4

[*.less]
indent_size = 2
indent_style = space

[*.scss]
indent_size = 2
indent_style = space

[{*.cjs,*.js}]
indent_size = 2
indent_style = space
tab_width = 2

[{*.ts,*.ats}]
indent_size = 2
indent_style = space
tab_width = 2

[{.analysis_options,.browserslistrc,*.yml,*.yaml}]
indent_size = 2
indent_style = space

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[{.eslintrc,.prettierrc,.babelrc,jest.config,.stylelintrc,*.bowerrc,*.jsb3,*.jsb2,*.json}]
indent_size = 2
